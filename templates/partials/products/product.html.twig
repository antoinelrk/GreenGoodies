<div class="flex flex-col items-center group text-sm">
    <img
        src="{{ picture }}"
        alt="{{ name }}"
        class="aspect-square w-full object-cover"
    />

    <div class="flex flex-col items-center my-8">
        <h3 class="font-medium text-gray-900">{{ name }}</h3>
        <p class="mt-2 text-gray-500 text-xs">{{ excerpt }}</p>
        <p class="mt-4 font-medium text-gray-900">{{ price }}</p>
    </div>

    <a href="{{ to }}" class="my-6">Voir le produit</a>
</div>
